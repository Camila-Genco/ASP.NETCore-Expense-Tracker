@model ExpenseTracker.Models.Transaction

@{
    ViewData["PageTitle"] = "Create a new transaction";
}

<div class="row">
    <div class="col-md-7">
        <div class="frame p-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <select name="CategoryId" class="pick-category">
                    @foreach (var category in @ViewBag.Categories)
                    {
                        <option asp-for="CategoryId" name="CategoryId" value="@category.CategoryId" class="dropdown-item custom-drop">@category.NameAndIcon</option>
                    }
                </select>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control dark"/>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" type="text" class="form-control dark"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" type="date" class="form-control dark dark-calendar" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="Create" class="btn custom-button btn-success mt-3" />
            </div>
        </form>
        </div>
    </div>
</div>

<div class="my-3">
    <a asp-action="Index" class="btn back">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
